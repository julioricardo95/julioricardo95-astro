---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Descubre nuestra galería de productos tecnológicos para fanáticos de la tecnología. Encuentra los mejores dispositivos, desde computadoras hasta smartphones." />
		<meta name="keywords" content="tecnología, productos tecnológicos, computadoras, smartphones, gadgets" />
		<meta name="author" content="TuNombre" />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content="Galería de Productos Tecnológicos" />
		<meta property="og:description" content="Descubre nuestra galería de productos tecnológicos para fanáticos de la tecnología. Encuentra los mejores dispositivos, desde computadoras hasta smartphones." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://tusitio.com" />
		<meta property="og:image" content="https://tusitio.com/imagen-og.jpg" />
		<meta property="og:image:alt" content="Galería de Productos Tecnológicos" />
		<meta property="og:site_name" content="Galería de Productos Tecnológicos" />
		<meta property="og:locale" content="es_ES" />

		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Galería de Productos Tecnológicos" />
		<meta name="twitter:description" content="Descubre nuestra galería de productos tecnológicos para fanáticos de la tecnología. Encuentra los mejores dispositivos, desde computadoras hasta smartphones." />
		<meta name="twitter:image" content="https://tusitio.com/imagen-og.jpg" />
		<meta name="twitter:site" content="@TuUsuarioTwitter" />
		<meta name="twitter:creator" content="@TuUsuarioTwitter" />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="alternate icon" type="image/png" href="/favicon.png" />

		<!-- Canonical URL -->
		<link rel="canonical" href="https://tusitio.com" />

		<!-- FontAwesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

		<!-- Generador -->
		<meta name="generator" content={Astro.generator} />

		<!-- Título dinámico -->
		<title>{title}</title>
	</head>
	<body>
		<!-- Contenido principal -->
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	html {
		font-family: system-ui, sans-serif;
		background: #c2c5d8;
		line-height: 1.5;
		color: #333;
	}

	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	main {
		flex: 1;
		padding: 2rem;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
		background-color: #f4f4f4;
		padding: 0.2rem 0.4rem;
		border-radius: 4px;
	}

	a {
		color: rgb(var(--accent));
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}

	/* Animaciones */
	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes slideIn {
		from {
			transform: translateY(20px);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	.fade-in {
		animation: fadeIn 1s ease-in-out;
	}

	.slide-in {
		animation: slideIn 0.8s ease-out;
	}

	/* Iconos de FontAwesome */
	.icon {
		font-size: 1.5rem;
		margin-right: 0.5rem;
		transition: transform 0.3s ease;
	}

	.icon:hover {
		transform: scale(1.2);
	}

	/* Mejoras de accesibilidad */
	:focus {
		outline: 2px solid rgb(var(--accent));
		outline-offset: 2px;
	}

	/* Estilos responsivos */
	@media (max-width: 768px) {
		main {
			padding: 1rem;
		}
	}
</style>